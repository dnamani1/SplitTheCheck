<div class="mx-auto md:w-2/3 w-full p-6 bg-gray-200 rounded-lg shadow-md">
  
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-500 text-white font-medium rounded-lg mb-5 text-center" id="notice"><%= notice %></p>
  <% end %>

  <section class="project-description">
    <h2 class="text-center font-bold text-3xl mb-4">Show Restaurant Details</h2>
  </section>

  <%= render @restaurant %>

  <!--  <div class="flex items-center justify-center space-x-4 mt-4"> -->
    <%= form_with model: @restaurant, url: vote_restaurant_path(@restaurant), method: :patch, data: { turbo: false }, class: "flex items-center space-x-2" do |form| %>
      <%= form.radio_button :vote, 'will_split', class: "form-radio" %>
      <%= form.label :vote_will_split, 'Will Split Check', class: "text-sm" %>
      <%= form.radio_button :vote, 'wont_split', class: "form-radio" %>
      <%= form.label :vote_wont_split, "Won't Split Check", class: "text-sm" %>
      <%= form.submit "Vote", class: "rounded-lg py-2 px-4 bg-blue-600 text-white font-medium hover:bg-blue-700" %>
    <% end %>

    <div class="flex items-center justify-center space-x-4 mt-4">
    <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "rounded-lg py-2 px-4 bg-blue-600 text-white font-medium hover:bg-blue-700" %>
    <%= button_to "Destroy this restaurant", restaurant_path(@restaurant), method: :delete, form: { class: "inline" }, class: "rounded-lg py-2 px-4 bg-blue-600 font-medium hover:bg-blue-700 text-white" %>
    <%= link_to "Back to restaurants", restaurants_path, class: "rounded-lg py-2 px-4 bg-blue-600 text-white font-medium hover:bg-blue-700" %>
  </div>
</div>

